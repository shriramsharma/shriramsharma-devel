# git and tig related stuff
alias tr='tig refs'
alias ts='tig status'
alias tl='tig log'
alias tsh='tig stash'
alias nopush='git remote set-url --push upstream no-push'

# docker shortcuts
alias dscf='docker rm -f ${docker ps -a -q}'

alias ckcert='function _checkcert(){ echo \"GET /\" | openssl s_client -servername $1 -connect $2:443 | openssl x509 -noout -text; };_checkcert'
alias vi=/usr/local/bin/vim

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias gsrc="cd ~/Shriram/go/src"
